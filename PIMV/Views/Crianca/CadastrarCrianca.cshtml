<!--Conexao com banco-->
@{ 
    var db = WebMatrix.Data.Database.Open("dbBancoPIM");

    var idResp = Request.QueryString["cpf"];
    if (idResp == null)
    {

    }

    var r = db.QuerySingle("SELECT*FROM Responsavel WHERE cpf = @0", idResp);



    var sala = db.Query("SELECT*FROM Sala");
    var turma = db.Query("SELECT*FROM Turma");

    db.Close();
}


